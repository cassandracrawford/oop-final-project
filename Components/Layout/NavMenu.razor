@inject NavigationManager Navigation

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/dashboard">Village Rental</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="dashboard">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Dashboard
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="clients">
                <span class="bi bi-users-fill-nav-menu" aria-hidden="true"></span> Clients
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="equipment">
                <span class="bi bi-equipment-nav-menu" aria-hidden="true"></span> Equipment
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="rentals">
                <span class="bi bi-rental-nav-menu" aria-hidden="true"></span> Rentals
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="reports">
                <span class="bi bi-reports-nav-menu" aria-hidden="true"></span> Reports
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <a class="nav-link" @onclick="Logout">
                <span class="bi bi-settings-nav-menu" aria-hidden="true"></span> Logout
            </a>
        </div>
    </nav>
</div>

@code {
    private void Logout()
    {
        // Redirect to login page
        Navigation.NavigateTo("/");
    }
}
